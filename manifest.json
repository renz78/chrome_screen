{
  "manifest_version": 3,
  "name": "Screenshot Sender",
  "version": "1.0",
  "description": "Робить скріншот екрану та відправляє на сайт",
  "permissions": [
    "activeTab",
    "desktopCapture",
    "storage",
    "notifications"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Зробити скріншот"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "http://*/",
    "https://*/"
  ]
}